class Touch
  attr_reader  :x_pos, :y_pos, :x_speed, :y_speed, :motion_accel, :session_id

  def initialize( x_pos, y_pos, session_id)
    @x_pos = x_pos
    @y_pos = y_pos
    @session_id = session_id
    
    @x_speed = 0.0
    @y_speed = 0.0
    @motion_accel = 0.0
  end
  
  def update (x_pos, y_pos, session_id, x_speed = 0, y_speed = 0, motion_accel = 0)
    @x_pos, @y_pos = x_pos, y_pos
    @x_speed, @y_speed = x_speed, y_speed
    @session_id = session_id
    @motion_accel = motion_accel
  end
  
  def self.from_tuio (tuio_cursor)
    new( @x_pos = tuio_cursor.x_pos * $window.width ,
         @y_pos = tuio_cursor.y_pos * $window.height ,
         @session_id = tuio_cursor.session_id
    )
  end
  
  def update_from_tuio( tuio_cursor )
    @x_pos = tuio_cursor.x_pos * $window.width
    @y_pos = tuio_cursor.y_pos * $window.height
    @x_speed = tuio_cursor.x_speed
    @y_speed = tuio_cursor.y_speed
    @motion_accel = tuio_cursor.motion_accel
  end
  
end
